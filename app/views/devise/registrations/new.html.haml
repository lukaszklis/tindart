- content_for :top do
  = render 'partials/navigation'

%main.l-container
  .panel
    .panel__header
      %h2.panel__title= 'Zarejestruj się'

    .panel__body
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!

        .inputs__row
          .inputs__row-label
            = f.label :email, 'E-mail', class: 'inputs__label'
          .inputs__row-input
            = f.email_field :email, autofocus: true, class: 'inputs__input'

        .inputs__row
          .inputs__row-label
            = f.label :password, 'Hasło', class: 'inputs__label'
            - if @minimum_password_length
              %em= "(minimum #{@minimum_password_length} znaków)"
          .inputs__row-input
            = f.password_field :password, autocomplete: 'off', class: 'inputs__input'

        .inputs__row
          .inputs__row-label
            = f.label :password_confirmation, 'Powtórz hasło', class: 'inputs__label'
          .inputs__row-input
            = f.password_field :password_confirmation, autocomplete: 'off', class: 'inputs__input'

        .inputs__row
          %button{ type: 'submit', class: 'inputs__submit' }
            = 'Załóż konto'

    .panel__footer
      = render 'devise/shared/links'
